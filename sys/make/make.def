  CXX_VERSION       =  $(CXX) -dumpversion
  CXXLINK           =  $(CXX)
  CXXOFFLOADING     =  -fopenmp --offload-arch=native
  CXXOFFLOADING     +=  $(OMPV)
  CXX_NO_OFFLOADING = -fopenmp
