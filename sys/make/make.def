# IBM XL compiler
ifeq ($(CXX), xlc++)
  CXXOFFLOADING = -qoffload
  CXX_NO_OFFLOADING =
  CXXFLAGS += -std=c++11 -O3 -qsmp=omp $(CXXOFFLOADING)
  CXXLINK = xlc++
  CXXLINKFLAGS += -O3 -qsmp=omp $(CXXOFFLOADING)
